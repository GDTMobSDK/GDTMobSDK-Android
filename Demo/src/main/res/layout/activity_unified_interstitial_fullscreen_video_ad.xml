<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.qq.e.union.demo.DemoListActivity">

    <Button
        android:id="@+id/loadIADFullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载插屏全屏广告" />
    <Button
        android:id="@+id/isAdValid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="校验广告是否有效" />

    <Button
        android:id="@+id/showIADFullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="展示插屏全屏广告" />
    <Button
        android:id="@+id/request_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="requestS2SBiddingToken"
        android:text="获取 S2S token" />

    <Button
        android:id="@+id/loadAndShowAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载并展示广告" />

    <LinearLayout
        android:id="@+id/posIdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="广告位id："
            android:textSize="18dp" />

        <EditText
            android:id="@+id/posId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <Spinner
        android:id="@+id/id_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:id="@+id/btn_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="静音播放"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbMinVideoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频最小时长(闭区间): "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etMinVideoDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbMaxVideoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频最大时长(闭区间): "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etMaxVideoDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

</LinearLayout>
</ScrollView>